<% if flash[:notice]%>
    <p><%= flash[:notice] %></p>
<% end %>
<h1>Session#login</h1>
<%= form_tag(:action => :post_login) do %>
<%= label_tag(:email, "Socialcast Username:") %>
<%= text_field_tag(:email) %>
<%= label_tag(:password, "Password:") %>
<%= password_field_tag(:password) %>
    <%= submit_tag("Submit") %>
<% end %>